rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to write screenshots only to their own designated path
    // Example path: screenshots/{userId}/{eventId}/filename.png
    match /screenshots/{userId}/{eventId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId; // User can read their own screenshots
      allow write: if request.auth != null && request.auth.uid == userId; // Function (acting as user) or user can write
    }
    // Add other storage rules as needed
  }
}
